---
import BaseLayout from "../layouts/BaseLayout.astro";
import CrewContainer from "../components/CrewContainer.astro";
const allPosts = await Astro.glob('./posts/technology/*.md'); 


const desktopBg = "../public/images/technology/background-technology-desktop.jpg"
---
<BaseLayout background={desktopBg}>
	<CrewContainer
	name="Launch vehicle"
	description="A launch vehicle or carrier rocket is a rocket-propelled vehicle used to carry a payload from Earth's surface to space, usually to Earth orbit or beyond. Our WEB-X carrier rocket is the most powerful in operation. Standing 150 metres tall, it's quite an awe-inspiring sight on the launch pad!"
	url="../public/images/technology/image-launch-vehicle-portrait.jpg"
	/>
